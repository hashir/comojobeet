{% extends 'ComoJobeetBundle::layout.html.twig' %}

{% block headline %}Jobbet Category List 
    
{% endblock headline %}

{% block content %}

<table class="table well table_striped">
    <thead>
        <tr>
            
            <th>Name</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr class="{{ cycle(['even', 'odd'], loop.index) }}">
            
            <td>{{ entity.name }}</td>            
            
        </tr>
    {% endfor %}
    </tbody>
</table>

{% endblock content %}
